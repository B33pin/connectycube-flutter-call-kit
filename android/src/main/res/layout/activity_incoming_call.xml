<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/avatar_img"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="64dp"
        android:scaleType="fitCenter"
        tools:ignore="ContentDescription"
        tools:src="@drawable/connectycube_place_holder" />

    <TextView
        android:id="@+id/user_name_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/avatar_img"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:ellipsize="end"
        android:lines="1"
        android:padding="8dp"
        android:textColor="@android:color/black"
        android:textSize="28sp"
        android:textStyle="bold"
        tools:text="Order Alert" />

    <TextView
        android:id="@+id/call_type_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user_name_txt"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:padding="8dp"
        android:textColor="@android:color/holo_green_dark"
        android:textSize="24sp"
        tools:text="New order received" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="220dp"
        android:gravity="center_horizontal">

        <Button
            android:id="@+id/end_call_btn"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:background="@drawable/button_background2"
            android:onClick="onEndCall"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:padding="16dp"
            android:layout_weight="1"
            android:text="  Close  "
            android:textColor="#ffffff"
            android:textFontWeight="600"
            android:textSize="15dp"
            tools:ignore="ContentDescription" />
        <Button
            android:id="@+id/start_call_btn"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:background="@drawable/button_background1"
            android:onClick="onStartCall"
            android:layout_marginRight="20dp"
            android:padding="16dp"
            android:layout_weight="1"
            android:text="Open App"
            android:textColor="#ffffff"
            android:textFontWeight="600"
            android:textSize="15dp"
            tools:ignore="ContentDescription" />

    </LinearLayout>
</RelativeLayout>